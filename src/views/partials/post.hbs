{{!--Handlebars partial template for a post--}}
<div class="post-card">
  <div class="post-header">
    <div class="post-title">
      <a href="#post?id={{post._id}}"><h3>{{post.title}}</h3></a>
    </div>
    <div class="post-timestamp">
        <h4>{{post.timestamp}}</h4>
    </div>
    <div class="post-body">
        <p>{{post.body}}</p>
    </div>
  </div>
</div>